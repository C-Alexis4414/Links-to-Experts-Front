{
  "compilerOptions": {
    "target": "ESNext", // or "ES2017"
    // "outDir": "./dist",
    // "rootDir": "./src",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports":true,
    "strict": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": false,
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // or "preserve"
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    // "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    // ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    // ".next"
  ]
}
